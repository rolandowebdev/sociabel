{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [],
  "plugins": ["react", "prettier"],
  "rules": {
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "@typescript-eslint-quotes": [
      "off",
      "double",
      {
        "avoidEscape": true
      }
    ],
    "no-underscore-dangle": ["off", { "allowAfterThis": true }],
    "react/prop-types": ["off"],
    "react/jsx-uses-react": ["off"],
    "react/react-in-jsx-scope": ["off"],
    "react/jsx-props-no-spreading": ["warn"],
    "no-shadow": ["off"],
    "no-console": ["off"],
    "import/no-cycle": ["off"] // delete this after refactor components
  }
}
